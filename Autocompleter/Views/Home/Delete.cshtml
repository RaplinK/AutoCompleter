@model Autocompleter.Models.People

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>


        <dd>
            @Html.DisplayFor(model => model.Namee)
        </dd>



        <dt>
            @Html.Label("Name in own language", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrueName)
        </dd>


        <dt>
            @Html.Label("Name in english language", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FLName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Admin")
        </div>
    }
</div>
